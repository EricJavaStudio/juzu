<archetype-descriptor name="juzu.archetype">

  <requiredProperties>
    <requiredProperty key="juzuServer">
      <defaultValue>tomcat</defaultValue>
    </requiredProperty>
    <requiredProperty key="juzuInject">
      <defaultValue>guice</defaultValue>
    </requiredProperty>
  </requiredProperties>

  <fileSets>
    <fileSet filtered="true">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true">
      <directory>src/main/webapp</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>

</archetype-descriptor>